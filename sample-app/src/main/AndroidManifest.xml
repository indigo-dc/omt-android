<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.psnc.indigo.omt.sampleapp">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

  <application
      android:name=".IndigoApplication"
      android:allowBackup="true"
      android:icon="@drawable/logo"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".activities.LoginActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".activities.TasksActivity"
        android:label="Home">
    </activity>
    <activity
        android:name="net.openid.appauth.RedirectUriReceiverActivity"
        tools:node="replace">
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data android:scheme="pl.psnc.indigo.omt.sampleapp"/>
      </intent-filter>
    </activity>
    <activity android:name=".activities.TestActivity">
    </activity>
    <activity android:name=".activities.TaskDetailsActivity">
    </activity>
    <receiver android:name=".receivers.TaskBroadcastReceiver" >
      <intent-filter>
        <action android:name="pl.psnc.omt.actions.TASKS_UPDATE_LIST" >
        </action>
      </intent-filter>
    </receiver>
  </application>

</manifest>
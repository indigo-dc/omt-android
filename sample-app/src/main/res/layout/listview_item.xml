<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listitem_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >

  <TextView
      android:id="@+id/item.id"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignBottom="@+id/item.date"
      android:layout_alignParentStart="true"
      android:layout_gravity="center"
      android:background="@drawable/circle"
      android:gravity="center"
      android:maxLength="4"
      android:shadowRadius="10.0"
      android:textColor="@android:color/background_light"
      android:textSize="18sp"
      android:textStyle="bold"
      tools:text="1"
      />

  <TextView
      android:id="@+id/item.description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="5dp"
      android:layout_toEndOf="@+id/item.id"
      android:ellipsize="end"
      android:maxLines="1"
      android:textSize="20sp"
      tools:text="Description of task"
      />

  <TextView
      android:id="@+id/item.date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/item.description"
      android:layout_below="@+id/item.description"
      tools:text="2016-04-01 00:00:00"
      />

  <Button
      android:id="@+id/item.status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/item.date"
      android:layout_alignParentEnd="true"
      android:clickable="false"
      android:focusable="false"
      android:textStyle="italic"
      tools:text="DONE"
      style="@style/Base.Widget.AppCompat.Button.Colored"

      />

</RelativeLayout>
